<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <!-- Base application with toolbar theme. -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="MiniGauge">
        <item name="android:layout_width">@dimen/mini_gauge_diameter</item>
        <item name="android:layout_height">@dimen/mini_gauge_diameter</item>
        <item name="android:background">@drawable/mini_gauge_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <!--<item name="android:button">@drawable/mini_gauge_selector</item>-->

    <style name="MiniGaugex">
        <item name="android:button">@drawable/mini_gauge_selector</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
